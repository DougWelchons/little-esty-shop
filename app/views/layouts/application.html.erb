<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="padding: 25px">
    <% flash.each do |type, message| %>
      <div class="alert alert-dismissible alert-success" style="text-align: center;">
        <p><%= message %></p>
      </div>
    <% end %>
    <%= @repo.name %>
    <%= yield %>
    <p> Contributors:
      <% @contributors.names.each do |name| %>
        <%= name %>,
      <% end %>
    </p>
    <%= "Trevor's commits: #{@service.trev_commits}" %><br>
    <%= "Harrison's commits: #{@service.harrison_commits}" %><br>
    <%= "Doug's commits: #{@service.doug_commits}" %><br>
    <%= "Total Project Pull requests: #{@repo_pr.pull_request.count}" %>
  </body>
</html>
